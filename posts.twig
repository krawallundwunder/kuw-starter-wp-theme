<div class="container relative my-12 md:my-24">

	<h2 class="font-sans text-3xl font-extrabold text-neutral-900">
		{{ post.title }}
	</h2>
	<div class="pt-10 ">


		<div class="grid max-w-lg gap-5 mx-auto mt-12 lg:grid-cols-3 lg:max-w-none">
			{% for post in  posts %}

				<div class="flex flex-col overflow-hidden rounded-lg shadow-lg ">
					{% if post.thumbnail is not null %}
						<div class="flex-shrink-0">
							<img class="object-cover w-full h-48" src="{{ post.thumbnail.src}}" alt="{{ post.thumbnail.alt}}">
						</div>
					{% endif %}

					{% if post.thumbnail is  null %}
						<p>
							LOGO
						</p>
					{% endif %}
					<div class="flex flex-col justify-between flex-1 p-6 bg-white">
						<div class="flex-1">
							<a href="{{post.link}}" class="block mt-2">
								<p class="text-xl font-semibold text-gray-900">{{ post.title}}</p>
								<p class="mt-3 text-base text-gray-500">{{ post.content|excerpt(15)}}</p>
							</a>
						</div>
						<div class="flex items-center mt-6">

							<div class="ml-3">

								<div class="flex space-x-1 text-sm text-gray-500">
									<time datetime="2020-03-16">
										{{ post.date|date("m.d.Y") }}</time>

								</div>
							</div>
						</div>
					</div>

				</div>
			{% endfor %}
		</div>


	</div>
	<div class="flex justify-center space-x-4 ">
		<ul class="flex items-center space-x-4 pagination">
			{% for page in posts.pagination.pages %}
				<li class="">
					{% if page.link %}
						<a href="{{page.link}}" class="{{page.class}}">{{page.title}}</a>
					{% else %}
						<span class="{{page.class}}">{{page.title}}</span>
					{% endif %}
				</li>
			{% endfor %}
		</ul>

	</div>
</div>
