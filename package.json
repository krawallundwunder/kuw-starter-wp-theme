{
  "name": "phmu-starter-wp-theme",
  "version": "1.0.0",
  "repository": "git@github.com:phmu/phmu-starter-wp-theme.git",
  "license": "MIT",
  "scripts": {
    "setup": "yarn && yarn husky install",
    "styles": "npx tailwindcss -i ./assets/css/src.css -o ./assets/css/dist/style.min.css --minify --watch",
    "js": "npx webpack build --watch",
    "dev": "yarn npm-run-all --parallel styles js",
    "prod": "npx tailwindcss -i ./assets/css/src.css -o ./assets/css/dist/style.min.css --minify && yarn eslint ./assets/js/*.js && yarn eslint ./assets/js/**/*.js"
  },
  "devDependencies": {
    "@wordpress/eslint-plugin": "^9.1.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^7.12.0",
    "eslint-plugin-wordpress": "^0.1.0",
    "husky": "^7.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.12",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0"
  }
}
