{
  "name": "phmu-starter-wp-theme",
  "version": "1.0.0",
  "repository": "git@github.com:phmu/phmu-starter-wp-theme.git",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.12",
    "husky": "^7.0.1"
  },
  "scripts": {
    "setup": "yarn install && husky install && chmod ug+x .husky/*",
    "dev": "npx tailwindcss -i ./assets/src/input.css -o ./assets/css/tailwind.css && npx tailwindcss -o ./assets/css/tailwind.min.css --minify --watch",
    "prod": "npx tailwindcss -i ./assets/src/input.css -o ./assets/css/tailwind.css && npx tailwindcss -o ./assets/css/tailwind.min.css --minify"
  }
}
