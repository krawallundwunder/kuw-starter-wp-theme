<div class="py-20 lg:py-24 bg-white" is="flynt-block-team-section">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		{% if tag or title or description or buttons %}
			{% include "templates/_partials/headings.twig" with {tag, title, description, buttons, textAlign:'text-center' } %}
		{% endif %}

		{% if teamMembers %}
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-{{ teamMembers|length <= 3 ? teamMembers|length : 3 }} gap-6 lg:gap-8">
				{% for member in teamMembers %}
					<div class="flex">
						<div class="bg-gray-100 rounded-2xl p-8 lg:p-10 flex flex-col items-center text-center w-full">

							<div class="w-40 h-40 lg:w-48 lg:h-48 mb-6">
								{% if member.image %}
									<img src="{{ member.image|default(member.image.src) }}" class="w-full h-full object-cover rounded-full" loading="lazy">
								{% else %}
									<div class="w-full h-full rounded-full bg-linear-to-br from-purple-500 to-purple-700 flex items-center justify-center">
										<svg class="w-24 h-24 text-white opacity-90" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M12 12C14.21 12 16 10.21 16 8C16 5.79 14.21 4 12 4C9.79 4 8 5.79 8 8C8 10.21 9.79 12 12 12ZM12 14C9.33 14 4 15.34 4 18V20H20V18C20 15.34 14.67 14 12 14Z" fill="currentColor"/>
										</svg>
									</div>
								{% endif %}
							</div>

							<div class="w-full">
								<h3 class="text-xl lg:text-2xl font-bold text-gray-900 mb-2">
									{{ member.name }}
								</h3>
								<p class="text-base text-gray-600 mb-5">
									{{ member.position }}
								</p>

								{% if member.twitterUrl or member.linkedinUrl %}
									<div class="flex gap-3 justify-center items-center mt-5">
										{% if member.twitterUrl %}
											<a href="{{ member.twitterUrl }}" class="w-10 h-10 flex items-center justify-center rounded-full text-gray-600 hover:text-gray-900 hover:bg-gray-200 transition-all duration-200 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" target="_blank" rel="noopener noreferrer" aria-label="Twitter/X von {{ member.name }}">
												<svg class="w-5 h-5" viewbox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
													<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
												</svg>
											</a>
										{% endif %}
										{% if member.linkedinUrl %}
											<a href="{{ member.linkedinUrl }}" class="w-10 h-10 flex items-center justify-center rounded-full text-gray-600 hover:text-gray-900 hover:bg-gray-200 transition-all duration-200 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn von {{ member.name }}">
												<svg class="w-5 h-5" viewbox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
													<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
												</svg>
											</a>
										{% endif %}
									</div>
								{% endif %}
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}
	</div>
</div>
