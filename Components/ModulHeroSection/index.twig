<flynt-component name="ModulHeroSection" class="componentHeroHeader">
	{% set colorMap = {
    'black': {
        text: 'text-black',
        button: 'bg-white text-black hover:bg-yellow-400 hover:text-white border-yellow-400 hover:border-yellow-400'
    },
    'white': {
        text: 'text-white',
        button: 'bg-white text-yellow-400 hover:bg-yellow-400 hover:text-white border-yellow-400 hover:border-yellow-400'
    }
  } %}


	<div class="relative flex flex-col justify-center pt-24 {{ colorMap[backgroundColor].text }} bg-{{ backgroundColor|default('white') }} lg:min-h-[70vh] bg-cover bg-center bg-no-repeat" {% if backgroundImage %} style="background-image: url('{{ backgroundImage.src|esc_url }}');" {% endif %}>

		{% if backgroundImage %}
			<div class="absolute inset-0 bg-black" style="opacity: {{ overlayOpacity|default(60) / 100 }};"></div>
		{% endif %}

		<div class="container relative z-10 flex items-center h-full py-12">
			<div class="flex gap-12 items-center w-full">

				<div class="w-full {{ textPosition == 'full' ? 'w-full text-center' : 'text-start lg:w-2/3 '}} flex flex-col">

					{% if headline %}
						<div class="h2 text-4xl md:text-5xl lg:text-6xl leading-tight mb-6 font-bold">
							{{ headline|e('wp_kses_post') }}
						</div>
					{% endif %}

					{% if description %}
						<p class="text-2xl md:text-3xl lg:text-3xl mb-4 line-clamp-4">{{ description }}</p>
					{% endif %}


					{% if buttons %}
						<div class="flex md:flex-row gap-4 pt-6 {{ textPosition == 'full' ? 'mx-auto' : 'self-start'}}">
							{% for button in buttons %}
								{% include "templates/_partials/button.twig" with {
                  text: button.text,
                  link: button.link,
                  target: button.target,
                  variant: loop.first ? 'primary' : 'secondary',
                } %}
							{% endfor %}
						</div>
					{% endif %}
				</div>

			</div>
		</div>
	</div>
</flynt-component>
