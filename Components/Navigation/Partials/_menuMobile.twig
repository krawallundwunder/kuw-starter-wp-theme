<ul class="flex flex-col list-none p-0 m-0">
	{% for item in items %}
		<li class="border-b border-gray-800 last:border-0 pb-2 mb-2">

			{% if item.children is defined and item.children|length > 0 %}

				<details class="group/submenu w-full">
					<summary class="flex items-center justify-between w-full py-2 text-lg font-medium text-white cursor-pointer list-none hover:text-yellow-400 transition-colors select-none">
						<span>{{ item.title }}</span>
						<svg class="w-5 h-5 text-gray-500 transition-transform duration-300 group-open/submenu:rotate-180" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
						</svg>
					</summary>

					<ul class="mt-2 pl-6 border-l border-gray-700 space-y-3 ml-2">
						{% for child in item.children %}
							<li>
								<a class="mobile-menu-link block text-base text-gray-400 hover:text-white transition-colors {{ child.current ? 'text-white font-semibold' : '' }}" href="{{ child.link|e('esc_url') }}" {{ child.is_external or child.is_target_blank ? ' target="_blank" rel="noopener noreferrer"' }}>
									{{ child.title }}
								</a>
							</li>
						{% endfor %}
					</ul>
				</details>

			{% else %}

				<a href="{{ item.link|e('esc_url') }}" class="mobile-menu-link block py-2 text-lg font-medium text-white transition-colors hover:text-yellow-400 {{ item.current ? 'text-yellow-400' : '' }}" {{ item.is_external or item.is_target_blank ? ' target="_blank" rel="noopener noreferrer"' }}>
					{{ item.title }}
				</a>

			{% endif %}
		</li>
	{% endfor %}
</ul>
