<flynt-component name="ModuliFrame" class="py-8 md:py-12 lg:py-16">
	<div class="container px-4 mx-auto">

		{% if tag or title or description %}
			<div class="">
				{% include "templates/_partials/headings.twig" with { tag, title, description, textAlign: 'text-center' } %}
			</div>
		{% endif %}


		{% if iframeUrl %}
			<div class="w-full overflow-hidden rounded-lg bg-gray-100">
				<iframe src="{{ iframeUrl|e('esc_url') }}" width="100%" height="1050" style="border:none; overflow:hidden;" allowfullscreen loading="lazy" title="{{ title|default('iFrame Content')|e }}" sandbox="allow-scripts allow-forms allow-same-origin allow-popups"></iframe>
			</div>
		{% endif %}

	</div>
</flynt-component>
