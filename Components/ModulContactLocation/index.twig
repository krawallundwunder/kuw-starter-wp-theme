<section class="flyin-component component-spacing bg-white">
	<div
		class="container mx-auto px-4 py-16">

		{# Header Section #}
		<div class="mb-20">
			{% include "templates/_partials/headings.twig" with { tag, title, description, buttons, textAlign: 'text-center' } %}
		</div>

		{# Kontakt Section - Nur wenn Layout 'Kontakt' gewählt und Daten vorhanden #}
		{% if layout == 'Kontakt' and contactAreas|length > 0 %}
			<div class="mb-20">
				{% set contactGridClasses = 'grid gap-8 lg:gap-12 ' %}
				{% if contactLayout == '4' %}
					{% set contactGridClasses = contactGridClasses ~ 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-4' %}
				{% elseif contactLayout == '3' %}
					{% set contactGridClasses = contactGridClasses ~ 'grid-cols-1 sm:grid-cols-2 md:grid-cols-3' %}
				{% else %}
					{% set contactGridClasses = contactGridClasses ~ 'grid-cols-1 md:grid-cols-2' %}
				{% endif %}

				<div class="{{ contactGridClasses }}">
					{% for area in contactAreas %}
						{% if area.title or area.email or area.phone or area.formLink %}
							<div class="bg-gray-50 rounded-lg p-8 hover:shadow-lg transition-shadow duration-300">
								<div class="flex flex-col h-full">
									{% if area.title %}
										<h3 class="text-2xl font-medium text-gray-900 mb-4">{{ area.title }}</h3>
									{% endif %}

									<div class="space-y-3 grow">
										{% if area.email %}
											<a href="mailto:{{ area.email }}" class="block font-medium transition-colors">
												{{ area.email }}
											</a>
										{% endif %}
										{% if area.phone %}
											<a href="tel:{{ area.phone|replace({' ': '', '(': '', ')': '', '-': ''}) }}" class="block text-gray-600 hover:text-gray-800 transition-colors">
												{{ area.phone }}
											</a>
										{% endif %}
									</div>

									{% if area.formLink %}
										<div class="mt-6">
											<a href="{{ area.formLink.url }}" class="inline-flex items-center font-semibold transition-colors group" {% if area.formLink.target %} target="{{ area.formLink.target }}" {% endif %}>
												{{ area.formLink.title|default('Kontaktformular') }}
												<svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewbox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
												</svg>
											</a>
										</div>
									{% endif %}
								</div>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		{% endif %}

		{# Standorte Section - Nur wenn Layout 'Standorte' gewählt und Daten vorhanden #}
		{% if layout == 'Standorte' and locations|length > 0 %}
			<div>
				{% set locationsGridClasses = 'grid gap-8 lg:gap-12 ' %}
				{% if locationsLayout == '4' %}
					{% set locationsGridClasses = locationsGridClasses ~ 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-4' %}
				{% elseif locationsLayout == '3' %}
					{% set locationsGridClasses = locationsGridClasses ~ 'grid-cols-1 sm:grid-cols-2 md:grid-cols-3' %}
				{% else %}
					{% set locationsGridClasses = locationsGridClasses ~ 'grid-cols-1 md:grid-cols-2' %}
				{% endif %}

				<div class="{{ locationsGridClasses }}">
					{% for location in locations %}
						{% if location.city or location.street %}
							<div class="bg-white border border-primary/30 rounded-lg p-8 hover:border-primary hover:shadow-lg transition-all duration-300">
								{% if location.city %}
									<h3 class="text-2xl font-medium text-gray-900 mb-6">{{ location.city }}</h3>
								{% endif %}

								<div class="space-y-2 text-gray-600 mb-6">
									{% if location.street %}
										<p class="text-base">{{ location.street }}</p>
									{% endif %}
									<p class="text-base">
										{{ location.zip }}
										{{ location.cityName }}
										{% if location.country %},
											{{ location.country }}
										{% endif %}
									</p>
								</div>

								{% if location.phone or location.email %}
									<div class="space-y-2 mb-6 pt-4 border-t border-gray-200">
										{% if location.phone %}
											<a href="tel:{{ location.phone|replace({' ': '', '(': '', ')': '', '-': ''}) }}" class="flex items-center font-bold text-gray-600 hover:text-gray-800 transition-colors">
												<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
												{{ location.phone }}
											</a>
										{% endif %}
										{% if location.email %}
											<a href="mailto:{{ location.email }}" class="flex items-center font-bold text-gray-600 hover:text-gray-800 transition-colors">
												<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
												{{ location.email }}
											</a>
										{% endif %}
									</div>
								{% endif %}

								{% if location.mapLink %}
									<a href="{{ location.mapLink }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center font-semibold transition-colors group">
										<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
										Auf Karte anzeigen
									</a>
								{% endif %}
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		{% endif %}

	</div>
</section>
