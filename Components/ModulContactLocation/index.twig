<section class="flyin-component component-spacing bg-white">
	<div
		class="container mx-auto px-4 py-16">

		{# Kontakt Section #}
		{% if contactAreas %}
			<div class="mb-20">
				<div class="mb-12">
					{% if contactHeading %}
						<h2 class="text-4xl md:text-5xl font-medium text-gray-900 mb-4">
							{{ contactHeading }}
						</h2>
					{% endif %}

					{% if contactDescription %}
						<p class="text-lg text-gray-400 max-w-2xl">
							{{ contactDescription }}
						</p>
					{% endif %}

					{% if button %}
						<div class="mt-4">
							<a href="{{ button.url }}" {% if button.target %} target="{{ button.target }}" {% endif %} class="inline-block rounded-lg bg-gray-50 px-4 py-4 text-gray-500 font-medium hover:bg-blue-700 hover:text-gray-50 transition-colors duration-200 no-underline!">
								{{ button.title }}
							</a>
						</div>
					{% endif %}

				</div>

				<div class="grid grid-cols-1 md:grid-cols-{{ contactLayout|default('2') }} gap-8 lg:gap-12">
					{% for area in contactAreas %}
						<div class="bg-gray-50 rounded-lg p-8 hover:shadow-lg transition-shadow duration-300">
							<div
								class="flex flex-col h-full">
								{# Icon (optional, war erstmal eine Idee) #}
								{% if area.icon %}
									<div class="mb-4">
										<div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">

											<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												{% if area.icon == 'users' %}
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
												{% elseif area.icon == 'newspaper' %}
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
												{% elseif area.icon == 'briefcase' %}
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
												{% elseif area.icon == 'message-circle' %}
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
												{% elseif area.icon == 'mail' %}
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
												{% elseif area.icon == 'phone' %}
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
												{% endif %}
											</svg>
										</div>
									</div>
								{% endif %}

								{# Titel #}
								<h3 class="text-2xl font-medium text-gray-900 mb-4">
									{{ area.title }}
								</h3>

								{# Kontaktdaten #}
								<div class="space-y-3 grow">
									{% if area.email %}
										<a href="mailto:{{ area.email }}" class="block text-blue-600 hover:text-blue-800 font-medium transition-colors">
											{{ area.email }}
										</a>
									{% endif %}

									{% if area.phone %}
										<a href="tel:{{ area.phone|replace({' ': '', '(': '', ')': '', '-': ''}) }}" class="block text-gray-600 hover:text-gray-800 transition-colors">
											{{ area.phone }}
										</a>
									{% endif %}
								</div>

								{# Link zum Kontaktformular #}
								{% if area.formLink %}
									<div class="mt-6">
										<a href="{{ area.formLink.url }}" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold transition-colors group" {% if area.formLink.target %} target="{{ area.formLink.target }}" {% endif %}>
											{{ area.formLink.title|default('Kontaktformular') }}
											<svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
											</svg>
										</a>
									</div>
								{% endif %}
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		{% endif %}

		{# Standorte Section #}
		{% if locations %}
			<div>
				<div class="mb-12">
					{% if locationsHeading %}
						<h2 class="text-4xl md:text-5xl font-medium text-gray-900 mb-4">
							{{ locationsHeading }}
						</h2>
					{% endif %}

					{% if locationsDescription %}
						<p class="text-lg text-gray-400 max-w-2xl">
							{{ locationsDescription }}
						</p>
					{% endif %}
				</div>

				<div class="grid grid-cols-1 md:grid-cols-{{ locationsLayout|default('2') }} gap-8 lg:gap-12">
					{% for location in locations %}
						<div
							class="bg-white border border-gray-200 rounded-lg p-8 hover:border-blue-500 hover:shadow-lg transition-all duration-300">
							{# Stadtname #}
							<h3 class="text-2xl font-medium text-gray-900 mb-6">
								{{ location.city }}
							</h3>

							{# Adresse #}
							<div class="space-y-2 text-gray-600 mb-6">
								<p class="text-base">{{ location.street }}</p>
								<p class="text-base">
									{{ location.zip }}
									{{ location.cityName }}
									{% if location.country %},
										{{ location.country }}
									{% endif %}
								</p>
							</div>

							{# Zus√§tzliche Kontaktinfos #}
							{% if location.phone or location.email %}
								<div class="space-y-2 mb-6 pt-4 border-t border-gray-200">
									{% if location.phone %}
										<a href="tel:{{ location.phone|replace({' ': '', '(': '', ')': '', '-': ''}) }}" class="flex items-center font-bold text-gray-600 hover:text-blue-600 transition-colors">
											<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
											</svg>
											{{ location.phone }}
										</a>
									{% endif %}

									{% if location.email %}
										<a href="mailto:{{ location.email }}" class="flex items-center font-bold text-gray-600 hover:text-blue-600 transition-colors">
											<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
											</svg>
											{{ location.email }}
										</a>
									{% endif %}
								</div>
							{% endif %}

							{# Google Maps Link #}
							{% if location.mapLink %}
								<a href="{{ location.mapLink }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold transition-colors group">
									<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
									</svg>
									Auf Karte anzeigen
								</a>
							{% endif %}
						</div>
					{% endfor %}
				</div>
			</div>
		{% endif %}
	</div>
</section>
